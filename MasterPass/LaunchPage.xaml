<Page x:Class="MasterPass.LaunchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MasterPass"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="LaunchPage"
	  ShowsNavigationUI="False">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="3*"/>
			<ColumnDefinition Width="1*"/>
		</Grid.ColumnDefinitions>
		<StackPanel Grid.Column="1" Orientation="Vertical">
			<TextBlock TextAlignment="Center" FontSize="30">MasterPass</TextBlock>
			<Image Source="/Resources/PlaceholderLogo.png" Width="150"/>
			<Label>Password:</Label>
			<TextBox Name="uxPassword"/>
			<Button Name="uxLogin" Click="uxLogin_Click" Margin="20">
				<TextBlock TextAlignment="Center">Log In</TextBlock>
			</Button>
		</StackPanel>
	</Grid>
</Page>
