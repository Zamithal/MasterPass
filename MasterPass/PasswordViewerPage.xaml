<Page x:Class="MasterPass.PasswordViewerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MasterPass"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="525"
      Title="PasswordViewer"
	  ShowsNavigationUI="False">

    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="5*"/>
			<RowDefinition Height="1*"/>
		</Grid.RowDefinitions>

		<ScrollViewer>
			<StackPanel Orientation="Vertical" Name="uxApplicationEntryContainer"/>
		</ScrollViewer>
		
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="3*"/>
				<ColumnDefinition Width="2*"/>
			</Grid.ColumnDefinitions>
			<Button Grid.Column="1" Margin="5"
					Name="uxNewApplicationButton" Click="uxNewApplicationButton_Click">New Application</Button>
		</Grid>
    </Grid>
</Page>
