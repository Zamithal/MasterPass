<Window x:Class="MasterPass.HashedPasswordDisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterPass"
        mc:Ignorable="d"
        Title="Password Information" Height="225" Width="300">
    <Grid>
		<DockPanel>
			<StackPanel Orientation="Vertical" DockPanel.Dock="Top">
				<Label>Password:</Label>
				<TextBlock Name="uxPasswordDisplay" Margin="20,0,0,0">MISSING</TextBlock>
				<Label>Date Created:</Label>
				<TextBlock Name="uxDateDisplay" Margin="20,0,0,0">MISSING</TextBlock>
				<StackPanel Orientation="Horizontal">
					<Label>Seed:</Label>
					<TextBlock Name="uxSeedDisplay" VerticalAlignment="Center">M</TextBlock>
				</StackPanel>
			</StackPanel>
			<Button Margin="20" Background="DarkRed"
					Name="uxDelete" Click="uxDelete_Click">DELETE</Button>
		</DockPanel>
	</Grid>
</Window>
